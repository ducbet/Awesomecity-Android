<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.framgia.awesomecity.screen.main.mainAct.MainActivity"
    >

    <data>

        <variable
            name="viewModel"
            type="com.framgia.awesomecity.screen.main.MainActivityViewModel"
            />

        <import type="com.framgia.awesomecity.utils.LayoutManagers"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5"
        android:paddingTop="@dimen/dp_5"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_refresh"
            android:onClick="@{viewModel::onRefresh}"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            bind:adapter="@{viewModel.adapter}"
            bind:layoutManager="android.support.v7.widget.StaggeredGridLayoutManager"
            bind:spanCount="@integer/spanCount"
            />
    </LinearLayout>
</layout>
